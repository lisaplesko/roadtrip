<div ng-controller='AlbumCtrl'>

  <div id="album_title_container" class="">
    <form id="album_title_form" action="api/trinity/albums" method="post">
      <input id="album_title" class="" type="text" size="35" placeholder="Set a title for this album">
    </form>
  </div>

  <div ng-repeat="album in albums track by $index">
    <a href="../{{album.title}}/photos">{{album.title}}</a>
  </div>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.13/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.13/angular-animate.js"></script>
  <script src="../js/angular-route.js"></script>
  <script src="../js/app.js"></script>
  <script src="../js/controllers/AlbumCtrl.js"></script>
  <script src="../js/services/albumFactory.js"></script>
</div>
